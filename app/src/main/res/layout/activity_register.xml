<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.RegisterActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ScrollView
            android:layout_below="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_marginTop="22dp"
                    android:layout_width="70dp"
                    android:layout_height="95dp"
                    android:src="@drawable/logo_black_title"
                    android:layout_centerHorizontal="true"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutName"
                    android:textColorHint="@color/gray_light"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:paddingStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgLogo"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp">

                <EditText
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nome Completo"
                        android:inputType="text"
                        android:maxLines="1"
                        android:drawableStart="@drawable/ic_person_gray_24dp"
                        android:textColor="@color/gray_dark"
                        android:drawablePadding="10dp"
                        android:paddingEnd="20dp"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:fontFamily="@font/ubuntu_light"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutEmail"
                    android:textColorHint="@color/gray_light"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layoutName"
                    android:paddingStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp">

                <EditText
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/prompt_email"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:drawableStart="@drawable/ic_email_gray_24dp"
                        android:textColor="@color/gray_dark"
                        android:drawablePadding="10dp"
                        android:paddingEnd="20dp"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:fontFamily="@font/ubuntu_light"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutPassword"
                    android:textColorHint="@color/gray_light"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layoutEmail"
                    android:paddingStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp">

                <EditText
                        android:id="@+id/txtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Senha"
                        android:inputType="textPassword"
                        android:drawableStart="@drawable/ic_lock_outline_gray_24dp"
                        android:textColor="@color/gray_dark"
                        android:drawablePadding="10dp"
                        android:paddingEnd="20dp"
                        android:fontFamily="@font/ubuntu_light"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:singleLine="true"/>


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutConfirmPassword"
                    android:textColorHint="@color/gray_light"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layoutPassword"
                    android:paddingStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp">

                <EditText
                        android:id="@+id/txtConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Confirmar senha"
                        android:inputType="textPassword"
                        android:drawableStart="@drawable/ic_lock_outline_gray_24dp"
                        android:textColor="@color/gray_dark"
                        android:drawablePadding="10dp"
                        android:paddingEnd="20dp"
                        android:fontFamily="@font/ubuntu_light"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:singleLine="true"/>


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutCourse"
                    android:textColorHint="@color/gray_light"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layoutConfirmPassword"
                    android:paddingStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="40dp"
                    android:visibility="gone"
                    android:layout_marginEnd="40dp">

                <EditText
                        android:id="@+id/txtCourse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Curso"
                        android:inputType="text"
                        android:drawableStart="@drawable/ic_college"
                        android:textColor="@color/gray_dark"
                        android:drawablePadding="10dp"
                        android:paddingEnd="20dp"
                        android:fontFamily="@font/ubuntu_light"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:singleLine="true"/>


            </com.google.android.material.textfield.TextInputLayout>

            <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_below="@id/layoutCourse"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <RadioButton
                        android:id="@+id/btnUFRJStudent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:textSize="16sp"
                        android:paddingStart="10dp"
                        android:text="Aluno da UFRJ"
                        android:textColor="@color/gray_dark"/>
                <RadioButton
                        android:id="@+id/btnUFRJTeacher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:textSize="16sp"
                        android:paddingStart="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Professor da UFRJ"
                        android:textColor="@color/gray_dark"/>
                <RadioButton
                        android:id="@+id/btnOtherStudent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:textSize="16sp"
                        android:paddingStart="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Aluno de outra instituição"
                        android:textColor="@color/gray_dark"/>
                <RadioButton
                        android:id="@+id/btnOtherTeacher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:textSize="16sp"
                        android:paddingStart="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Professor de outra instituição"
                        android:textColor="@color/gray_dark"/>
                <RadioButton
                        android:id="@+id/btnOther"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:textSize="16sp"
                        android:paddingStart="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Outros"
                        android:textColor="@color/gray_dark"/>
            </RadioGroup>

            <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/login_button"
                    android:layout_margin="40dp"
                    android:text="Cadastrar"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/white"
                    android:layout_below="@id/radioGroup"/>

        </RelativeLayout>

    </ScrollView>





</RelativeLayout>