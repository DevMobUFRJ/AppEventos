<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="devmob.semanasacademicas.Types"/>
        <variable name="event" type="devmob.semanasacademicas.dataclass.Evento"/>
        <variable name="fragment" type="devmob.semanasacademicas.fragments.FragmentTelaDeEvento"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       tools:context=".fragments.FragmentTelaDeEvento">
        <TextView
                android:text="@{event.periodo()}"
                android:fontFamily="@font/roboto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/periodoEvento"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="28dp"
                android:textColor="@color/gray_dark"
                android:textSize="12sp"/>
        <TextView
                android:text="@{event.nome}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nomeEvento"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@+id/periodoEvento"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="28dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:textSize="24sp"/>
        <TextView
                android:text="@{event.descricao}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/descricaoEvento"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@+id/nomeEvento"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="28dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/gray_light"
                android:textSize="14sp"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listaDeTipos"

                android:layout_width="0dp"
                android:layout_height="0dp"

                android:layout_marginTop="35dp"
                app:layout_constraintTop_toBottomOf="@+id/descricaoEvento"

                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="12dp"

                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"

                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>