<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
>
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btnRegister"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    tools:srcCompat="@tools:sample/backgrounds/scenic"
                    android:id="@+id/imageView"/>
            <TextView
                    android:text="data"
                    android:fontFamily="@font/roboto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/periodoEvento"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/imageView"
                    android:layout_marginStart="28dp"
                    android:textColor="@color/gray_dark"
                    android:textSize="12sp"/>
            <TextView
                    android:text="nome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nomeEvento"
                    android:layout_marginTop="14dp"
                    android:layout_below="@id/periodoEvento"
                    android:layout_marginStart="28dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:textSize="24sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/descricaoEvento"
                    android:layout_marginTop="7dp"
                    android:layout_below="@id/nomeEvento"
                    android:layout_marginStart="28dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/gray_light"
                    android:textSize="14sp"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listaDeTipos"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="35dp"
                    android:layout_below="@id/descricaoEvento"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="12dp"/>

        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>

    <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Inscrever-me"
            android:textColor="@color/white"
            android:background="@drawable/button_register_event"
            android:layout_alignParentBottom="true"/>

</RelativeLayout>
