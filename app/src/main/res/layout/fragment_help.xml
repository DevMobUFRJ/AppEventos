<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".fragments.HelpFragment">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="match_parent"
                                                           android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/devmob_logo"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/devmob_logo"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
            />
            <TextView
                    android:id="@+id/appName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="30dp"
                    app:layout_constraintTop_toBottomOf="@id/devmob_logo"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="fill_vertical"
                    android:textSize="18sp"
                    android:text="@string/app_name"/>
            <TextView
                    android:id="@+id/appDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    app:layout_constraintTop_toBottomOf="@id/appName"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:fontFamily="@font/roboto"
                    android:gravity="fill_vertical"
                    android:textSize="14sp"
                    android:text="@string/app_description"/>
            <TextView
                    android:id="@+id/groupName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@id/appDescription"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="fill_vertical"
                    android:textSize="18sp"
                    android:text="@string/group_name"/>
            <TextView
                    android:id="@+id/groupDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    app:layout_constraintTop_toBottomOf="@id/groupName"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:fontFamily="@font/roboto"
                    android:gravity="fill_vertical"
                    android:textSize="14sp"
                    android:text="@string/group_description"/>
            <ImageView
                    android:id="@+id/github"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:layout_constraintTop_toBottomOf="@id/groupDescription"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="@id/facebook"
                    android:src="@drawable/github_logo"/>
            <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:layout_constraintTop_toBottomOf="@id/groupDescription"
                    app:layout_constraintLeft_toLeftOf="@id/github"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/facebook_logo"/>
            <TextView
                    android:id="@+id/txtDevelop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="30dp"
                    app:layout_constraintTop_toBottomOf="@id/facebook"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:gravity="fill_vertical"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Desenvolvido por:"/>
            <TextView
                    android:id="@+id/txtDevelopers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="35dp"
                    app:layout_constraintTop_toBottomOf="@id/txtDevelop"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:gravity="fill_vertical"
                    android:fontFamily="@font/roboto"
                    android:textSize="14sp"
                    android:text="@string/developers"/>
            <TextView
                    android:id="@+id/txtDesign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="30dp"
                    app:layout_constraintTop_toBottomOf="@id/txtDevelopers"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:gravity="fill_vertical"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Design elaborado por:"/>
            <TextView
                    android:id="@+id/txtDesigner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="35dp"
                    app:layout_constraintTop_toBottomOf="@id/txtDesign"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:gravity="fill_vertical"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"
                    android:text="@string/designers"
                    android:layout_marginBottom="30dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>