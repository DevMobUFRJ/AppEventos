<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dia_numero" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="29sp" android:textColor="@color/colorPrimary"/>
    <TextView
            android:text="AGO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mes" app:layout_constraintStart_toStartOf="@+id/dia_numero"
            app:layout_constraintTop_toBottomOf="@+id/dia_numero"
            android:textSize="18sp" android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@+id/dia_numero"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/listFavorite_Items"
            app:layout_constraintStart_toEndOf="@+id/dia_numero"
            android:layout_marginStart="10dp" app:layout_constraintTop_toTopOf="@+id/dia_numero"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>