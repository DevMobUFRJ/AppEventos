<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="8dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp">

            <TextView
                    android:text="08:00"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/horaInicio"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="@+id/nomePalestra"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/black"/>
            <TextView
                    android:text="17:00"
                    android:layout_width="50dp"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/horaFim"

                    app:layout_constraintBottom_toBottomOf="@id/sala"
                    app:layout_constraintStart_toStartOf="@id/horaInicio"
                    app:layout_constraintEnd_toEndOf="@id/horaInicio"
                    android:textColor="@color/black"/>
            <TextView
                    android:text="Nome da Palestra"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/horaInicio"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/nomePalestra"/>
            <TextView
                    android:text="Sala"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sala"
                    app:layout_constraintTop_toBottomOf="@id/nomePalestra"
                    app:layout_constraintStart_toStartOf="@id/nomePalestra"
            />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>